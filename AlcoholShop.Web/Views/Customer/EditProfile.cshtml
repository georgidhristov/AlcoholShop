@model AlcoholShop.Models.ViewModels.Customer.EditCustomerProfileViewModel

@{
    ViewBag.Title = "Edit Profile";
}

<h2>Edit Profile Details</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(vm => vm.Name)
        @Html.TextBoxFor(vm => vm.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(vm => vm.Address)
        @Html.TextBoxFor(vm => vm.Address, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(vm => vm.Postcode)
        @Html.TextBoxFor(vm => vm.Postcode, new { @type = "number", @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(vm => vm.PhoneNumber)
        @Html.TextBoxFor(vm => vm.PhoneNumber, new { @type = "number", @class = "form-control" })
    </div>

    <div class="form-group">
        <input type="submit" value="Edit" class="form-control"/>
    </div>
}